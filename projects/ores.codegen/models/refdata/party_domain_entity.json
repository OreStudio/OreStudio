      {
        "name": "status",
        "type": "text",
        "cpp_type": "std::string",
        "nullable": false,
        "description": "Current lifecycle status.",
        "detail": "References the party_status lookup table.",
        "generator_expr": "std::string(\"Active\")"
      }
    ],

