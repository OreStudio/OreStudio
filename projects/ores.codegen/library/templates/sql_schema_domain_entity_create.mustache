create or replace function {{domain_entity.schema}}.{{domain_entity.component}}_{{domain_entity.entity_plural}}_insert_fn()
returns trigger as $$
declare
    current_version integer;
begin
    -- Version management
    select version into current_version
    from "{{domain_entity.schema}}"."{{domain_entity.component}}_{{domain_entity.entity_plural}}_tbl"
    where {{domain_entity.primary_key.column}} = NEW.{{domain_entity.primary_key.column}}
      and valid_to = {{domain_entity.schema}}.utility_infinity_timestamp_fn();

    if found then
        if NEW.version != 0 and NEW.version != current_version then
            raise exception 'Version conflict: expected version %, but current version is %',
                NEW.version, current_version
                using errcode = 'P0002';
        end if;
        NEW.version = current_version + 1;

        update "{{domain_entity.schema}}"."{{domain_entity.component}}_{{domain_entity.entity_plural}}_tbl"
        set valid_to = current_timestamp
        where {{domain_entity.primary_key.column}} = NEW.{{domain_entity.primary_key.column}}
          and valid_to = {{domain_entity.schema}}.utility_infinity_timestamp_fn()
          and valid_from < current_timestamp;
    else
        NEW.version = 1;
    end if;

    NEW.valid_from = current_timestamp;
    NEW.valid_to = {{domain_entity.schema}}.utility_infinity_timestamp_fn();

    if NEW.modified_by is null or NEW.modified_by = '' then
        NEW.modified_by = current_user;
    end if;

    NEW.change_reason_code := {{domain_entity.schema}}.refdata_validate_change_reason_fn(NEW.change_reason_code);

    return NEW;
end;
$$ language plpgsql;

