    "sql": {
      "description": "SQL schema creation scripts",
      "model_types": ["domain_entity", "junction"],
      "templates": [
        "sql_schema_domain_entity_create.mustache",
        "sql_schema_junction_create.mustache"
      ]
    },
    "qt": {
