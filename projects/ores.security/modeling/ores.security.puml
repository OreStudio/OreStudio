@startuml

title ores.security Component

set namespaceSeparator ::

namespace ores #F2F2F2 {
    note "Shared security primitives" as ores_security_note
    security --- ores_security_note
    namespace security #F2F2F2 {
        namespace crypto {
            class password_hasher {
                +hash(password) : string
                +verify(password, hash) : bool
            }
            class encryption {
                +encrypt(plaintext, key) : string
                +decrypt(ciphertext, key) : string
                +verify_password(data, key) : bool
            }
        }
        namespace validation {
            class password_validator {
                +validate(password) : validation_result
            }
            class email_validator {
                +validate(email) : validation_result
            }
        }
    }
}

