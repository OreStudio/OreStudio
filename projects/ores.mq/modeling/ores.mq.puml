@startuml
!pragma layout smetana

title ores.mq - Message Queue Component

set namespaceSeparator ::

namespace ores #F2F2F2 {
    note "Message queue support built on pgmq.\nProvides low-level pgmq wrapper (pgmq namespace)\nand high-level remoting-aware API (domain namespace)." as ores_mq_note
    mq --- ores_mq_note
    namespace mq #F2F2F2 {

        namespace pgmq #E8F4E8 {
            note "Low-level C++23 wrapper around the\npgmq PostgreSQL extension.\nMirrors the Npgmq (.NET) API." as pgmq_note
        }

        namespace domain #E8E8F4 {
            note "High-level message queue API.\nHides pgmq internals.\nSupports remoting via ores.comms." as domain_note
        }
    }
}

