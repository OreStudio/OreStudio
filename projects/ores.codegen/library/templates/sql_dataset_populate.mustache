{{#datasets}}
select ores.upsert_dq_datasets(
    '{{key}}',
    '{{domain}}',
    '{{name}}',
    '{{category}}',
    '{{identifier}}',
    '{{classification}}',
    '{{status}}',
    '{{quality_level}}',
    '{{methodology}}',
    '{{title}}',
    '{{description}}',
    '{{origin}}',
    '{{notes}}',
    current_date,
    '{{license}}',
    '{{tags}}'
);
{{/datasets}}

