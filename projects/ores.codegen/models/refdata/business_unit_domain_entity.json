      {
        "name": "business_centre_code",
        "type": "text",
        "cpp_type": "std::string",
        "nullable": true,
        "description": "Business centre for the unit.",
        "detail": "References the business centres scheme. May be null for global units.",
        "generator_expr": "std::string(\"GBLO\")"
      }
    ],

