@startuml

title ores.http Component

set namespaceSeparator ::

namespace ores #F2F2F2 {
    note "HTTP server library using Boost.Beast with JWT authentication and OpenAPI support" as ores_http_note
    http --- ores_http_note
    namespace http #F2F2F2 {

        namespace net {
            class http_server
            class http_session
            class router
        }

        namespace middleware {
            class jwt_authenticator
            class cors_middleware
        }

        namespace openapi {
            class endpoint_registry
            class openapi_generator
        }

        namespace domain {
            class http_request
            class http_response
            class route
            class jwt_claims
        }

    }
}

