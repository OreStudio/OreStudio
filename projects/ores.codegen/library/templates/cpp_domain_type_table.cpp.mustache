#include "ores.{{component}}/domain/{{entity_singular}}_table.hpp"

#include <boost/uuid/uuid_io.hpp>
#include <fort.hpp>

namespace ores::{{component}}::domain {

std::string convert_to_table(const std::vector<{{entity_singular}}>& v) {
    fort::char_table table;
    table.set_border_style(FT_BASIC_STYLE);

    table << fort::header{{#cpp.table_display}} << "{{header}}"{{/cpp.table_display}} << fort::endr;

    for (const auto& {{cpp.iterator_var}} : v) {
        table{{#cpp.table_display}}{{#is_uuid}} << boost::uuids::to_string({{iter_var}}.{{column}}){{/is_uuid}}{{^is_uuid}} << {{iter_var}}.{{column}}{{/is_uuid}}{{/cpp.table_display}} << fort::endr;
    }
    return table.to_string();
}

}
