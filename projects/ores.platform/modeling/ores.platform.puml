@startuml

title ores.platform Component

set namespaceSeparator ::

namespace ores #F2F2F2 {
    note "Platform-specific utilities including environment variables,\nfilesystem operations, and network information." as ores_platform_note
    platform --- ores_platform_note
    namespace platform #F2F2F2 {
        namespace environment {
            class environment {
                +{static} get_value(name: string): optional<string>
                +{static} get_value_or_default(name: string, default: string): string
                +{static} get_int_value_or_default(name: string, default: int): int
                +{static} set_value(name: string, value: string): void
            }
        }

        namespace filesystem {
            class file {
                +{static} read_content(path: path): string
                +{static} write_content(path: path, content: string): void
                +{static} find_files(dir: path): set<path>
                +{static} remove(files: list<path>): void
                +{static} recreate_directory(dir: path): void
            }
            class io_error
            class file_not_found
        }

        namespace net {
            +get_hostname(): string
            +get_primary_mac_address(): optional<string>
            +derive_machine_id(): string
            +get_process_id(): int64
        }
    }
}

