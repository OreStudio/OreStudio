        "cpp_domain_type_generator.cpp.mustache"
      ]
    },
    "repository": {
      "description": "Repository layer (entity, mapper, CRUD)",
      "model_types": ["schema"],
      "templates": [
        "cpp_domain_type_entity.hpp.mustache",
        "cpp_domain_type_entity.cpp.mustache",
        "cpp_domain_type_mapper.hpp.mustache",
        "cpp_domain_type_mapper.cpp.mustache",
        "cpp_domain_type_repository.hpp.mustache",
        "cpp_domain_type_repository.cpp.mustache"
      ]
    },
    "service": {
      "description": "Service layer",
      "model_types": ["schema"],
      "templates": [
        "cpp_service.hpp.mustache",
        "cpp_service.cpp.mustache"
      ]
    },
    "all-cpp": {
      "description": "All C++ facets (domain, repository, service, protocol, generator)",
      "model_types": ["schema"],
      "includes": ["domain", "generator", "repository", "service", "protocol"]
    },
    "plantuml": {
      "description": "PlantUML ER diagrams",
      "model_types": ["schema", "data"],
      "templates": [
        "plantuml_er.mustache"
      ]
    }
